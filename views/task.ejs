<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>My Task Board</title>
    <link rel="stylesheet" href="/tasks/task-style.css" />
  </head>
  <body>
    <div class="task-manager-container">
      <header class="task-header">
        <h1 class="task-title">Welcome, <%= user.name %>!</h1>
        <div class="header-controls">
          <button class="new-task-btn">+ New Task</button>
          <a href="/logout" class="logout-btn">Logout</a>
        </div>
      </header>

      <!-- Task List -->
      <section class="task-list">
        <% if (tasks.length === 0) { %>
        <p class="no-tasks">You have no tasks yet. Start by adding one!</p>
        <% } else { %> <% tasks.forEach(task => { %>
        <div class="task-card" data-id="<%= task._id %>">
          <h3><%= task.title %></h3>
          <% if (task.description) { %>
          <p><%= task.description %></p>
          <% } %> <% if (task.dueDate) { %>
          <p><strong>Due:</strong> <%= task.dueDate.toDateString() %></p>
          <% } %>
          <p><strong>Priority:</strong> <%= task.priority %></p>
          <div class="task-actions">
            <button class="edit-btn">Edit</button>
            <button class="delete-btn">Delete</button>
          </div>
        </div>
        <% }); %> <% } %>
      </section>
    </div>

    <!-- Modal for New Task -->
    <div id="newTaskModal" class="modal" style="display: none">
      <div class="modal-content">
        <span class="close-btn" id="closeModal">&times;</span>
        <h2>Add New Task</h2>
        <form id="newTaskForm" action="/tasks" method="POST">
          <div class="form-group">
            <label for="title">Title<span style="color: red">*</span></label>
            <input
              type="text"
              id="title"
              name="title"
              maxlength="200"
              required
            />
          </div>
          <div class="form-group">
            <label for="description">Description</label>
            <textarea
              id="description"
              name="description"
              maxlength="500"
            ></textarea>
          </div>
          <div class="form-group">
            <label for="dueDate">Due Date</label>
            <input type="date" id="dueDate" name="dueDate" />
          </div>
          <div class="form-group">
            <label for="priority">Priority</label>
            <select id="priority" name="priority">
              <option value="low">Low</option>
              <option value="medium" selected>Medium</option>
              <option value="high">High</option>
            </select>
          </div>

          <button type="submit" class="new-task-btn" style="width: 100%">
            Add Task
          </button>
        </form>
      </div>
    </div>

    <script src="/tasks/task.js"></script>
  </body>
</html>
